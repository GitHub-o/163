flex-row() {
  display: flex;
  flex-direction: row;
}

flex-column() {
  display: flex;
  flex-direction: column;
}

vh-center() {
  display: flex;
  align-items: center;
  justify-content: center;
}

ellipsis() {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

ellipsis-m(n) {
  display: -webkit-box;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: n;
}